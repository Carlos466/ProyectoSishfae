<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario usuario</title>


    <style type="text/css">


    </style>



</head>
<body>


    <div class="container">
     

        <div class="cell-lg-9">

            <div class="bg-white p-4 m-2">
                <h4>Registrar nuevo Usuario</h4>

                <form class="custom-validation need-validation" novalidate="">

                    <div class="row mb-3">
                        <div class="cell-md-3">
                            <label>Rut</label>
                            <input type="text" required="" value="12345678-9">
                            <div class="invalid_feedback">Ingrese el Rut</div>
                        </div>

                        <div class="cell-md-9">
                            <label>Nombre</label>
                            <input type="text" required value="Pizarro">
                            <div class="invalid_feedback">Ingrese el Nombre</div>
                        </div>

                    </div>


                    <div class="row mb-2">

                        <div class="cell-md-3">
                            <label>Alias</label>
                            <input type="text" required value="Gates">
                            <div class="invalid_feedback">Ingrese el Alias</div>
                        </div>

                        <div class="cell-md-9">
                            <label>Direccion</label>
                            <input type="text" required value="">
                            <div class="invalid_feedback">Ingrese La direccion</div>
                        </div>
                    </div>


                    <div class="row mb-2">

                        <div class="cell-md-6">
                            <label>Email</label>
                            <input type="text" required="" title="">
                            <div class="invalid_feedback">Ingrese el Email</div>
                        </div>

                        <div class="cell-md-6">
                            <label>Telefono</label>
                            <input type="number" required="" placeholder="Telefono" title="">
                            <div class="invalid_feedback">Ingrese el Telefono</div>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="cell-md-6">
                            <label>Password</label>
                            <input type="password" data-role="input">
                            <div class="invalid_feedback">Ingrese una clave</div>
                        </div>

                        <!--Lista desplegable-->
                        <div class="cell-md-6">
                            <label>Empresa</label>
                            <select>
                                <option selected>Seleccione</option>
                                <option value="Empresa 1">Empresa 1</option>
                                <option value="Empresa 2">Empresa 2</option>
                                <option value="Empresa 3">Empresa 3</option>
                            </select>
                        </div>

                    </div>

                    <div class="row mb-2">
                        <!--Lista desplegable-->
                        <div class="cell-md-6">
                            <label>Tipo Usuario</label>
                            <select>
                                <option selected>Seleccione</option>
                                <option value="Habilitado">Habilitado</option>
                                <option value="Inahibilitado">Inahibilitado</option>
                                <option value="En espera">En espera</option>
                            </select>
                        </div>
                    </div>

                    <button class="button primary">Guardar</button>
                    <input type="reset" class="button" value="Limpiar" />
                    <a href="@Url.Action("Listar","Usuarios")"> <input type="button" value="Atras"></a>

                </form>
            </div>
        </div>

    </div>


</body>
</html>
